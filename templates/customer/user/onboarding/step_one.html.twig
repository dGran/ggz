{% extends 'customer/base.html.twig' %}

{% set whithoutHeader = true %}
{% set whithoutFooter = true %}
{% set bodyBackgroundClass = 'bg-[#F7F7F7]' %}

{% block title %}Thanks for joining us!{% endblock %}

{% block content %}
    <div class="container mx-auto p-10">
        <p class="font-lato text-4xl font-extrabold text-[#C4C4C4] tracking-wider">1/3</p>
        <div class="text-center my-4">
            <p class="font-ubuntu text-4xl font-bold text-purpleggz">Thanks for joining us!</p>
            <p class="mt-2.5 mb-6 font-lato font-bold text-blacktext">Complete your registration and start your journey!</p>

            <div class="sm:w-[18rem] mt-10 mx-auto text-center">
                {{ form_start(on_boarding_step_one_form) }}
                <input type="hidden" id="check-nickname-url" data-url="{{ path('customer_onboarding_check_nickname') }}">
                <div class="flex items-baseline justify-center mb-5 font-ubuntu font-bold">
                    {{ form_label(on_boarding_step_one_form.nickname, null, {'label_attr': {'class': 'text-2xl text-purpleggz'}}) }}
                    <span class="pl-2.5 text-xs uppercase text-gray-600">Required</span>
                </div>
                {{ form_widget(on_boarding_step_one_form.nickname) }}
                <div id="nickname-info" class="mt-1.5 text-center text-sm font-medium text-gray-600"></div>
                {{ form_widget(on_boarding_step_one_form.submit) }}
                {{ form_end(on_boarding_step_one_form) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('build/app/styles/customer/onboarding/step-one.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/app/js/customer/user/onboarding/step-one.js') }}" defer></script>
{% endblock %}


